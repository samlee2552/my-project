<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.sbl.mp.dao.ArticleDao">
	<select id="getArticlesForList" resultMap="article">
		SELECT A.*,
		M.nickname
		As extra__writer
		FROM article AS A
		INNER JOIN member AS M
		ON A.memberId =
		M.id
		WHERE A.displayStatus = 1
		ORDER BY A.id DESC;
	</select>

	<select id="getBoardByCode" resultType="Board">
		SELECT *
		FROM board
		WHERE
		code = #{code};
	</select>

	<select id="getArticleByIdForDetail" resultMap="article">
		SELECT A.*,
		M.nickname AS extra__writer
		FROM article AS A
		INNER JOIN member AS M
		ON A.memberId = M.id
		WHERE A.displayStatus = 1
		AND A.id = #{id}
	</select>

	<resultMap type="Article" id="article">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="delDate" column="delDate" />
		<id property="delStatus" column="delStatus" />
		<id property="title" column="title" />
		<id property="body" column="body" />
		<id property="memberId" column="memberId" />
		<id property="boardId" column="boardId" />
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>

</mapper>